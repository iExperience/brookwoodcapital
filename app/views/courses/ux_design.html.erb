<!-- UX Design -->
<section class="most-height bg-fixed bg-ux-design-main">
  <a class="anchor" id="home"></a>
  <div class="bg-overlay"></div>
  <div class="main-headline text-center container">
    <h1>Design the Future</h1>
    <h3>Architect exceptional products.</h3>
    <h3>Understand user psychology.</h3>
    <h3>Make your visions a reality.</h3>
  </div>
</section>
